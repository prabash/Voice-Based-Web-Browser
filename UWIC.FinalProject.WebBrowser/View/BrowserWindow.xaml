<metro:Window x:Class="UWIC.FinalProject.WebBrowser.View.BrowserWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:metro="http://schemas.codeplex.com/elysium"
              xmlns:params="http://schemas.codeplex.com/elysium/params"
              xmlns:awesomium="http://schemas.awesomium.com/winfx" 
              xmlns:myControl="clr-namespace:UWIC.FinalProject.WebBrowser.Controller"
              params:Design.Theme="Dark"
              params:Design.AccentBrush="{x:Static metro:AccentBrushes.Blue}"
              params:Design.ContrastBrush="White"
              Title="Vocem Browser" Height="674" Width="1200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TabControl>
            <TabItem Header="Google">
                <myControl:BrowserContainer/>
            </TabItem>
            <TabItem Header="Facebook">
                <myControl:BrowserContainer/>
            </TabItem>
        </TabControl>
    </Grid>
</metro:Window>
